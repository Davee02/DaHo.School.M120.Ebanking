<Application x:Class="DaHo.School.M120.Ebanking.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
        <Style TargetType="Label" x:Key="CentredLabel">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox" x:Key="MultiLineTextBox">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        </Style>
        <Style TargetType="Image" x:Key="HeaderImage">
            <Setter Property="Source" Value="Ressources/ncbank_logo.png" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Grid.Column" Value="0" />
        </Style>
    </Application.Resources>
</Application>
